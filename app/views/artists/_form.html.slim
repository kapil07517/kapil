= form_for @artist, html: { class: "form form-horizontal artist" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control'
      = f.error_span(:name)
  .form-group
    = f.label :is_on_tour, class: 'control-label col-lg-2'
    .col-lg-10
      = f.radio_button :is_on_tour, true, checked: true
      = f.error_span(:is_on_tour)
  .form-group
    .col-lg-offset-2.col-lg-10
      => f.submit nil, class: 'btn btn-primary'
      = link_to 'Cancel', artists_path, class: 'btn'
